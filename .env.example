# =============================================================================
# BreakTheVibe â€” Environment Configuration
# Copy to .env and fill in your values
# =============================================================================

# -----------------------------------------------------------------------------
# Database
# -----------------------------------------------------------------------------
DATABASE_URL=postgresql+asyncpg://breakthevibe:breakthevibe@localhost:5432/breakthevibe
USE_DATABASE=false  # Set true in production to use PostgreSQL repos

# -----------------------------------------------------------------------------
# App
# -----------------------------------------------------------------------------
SECRET_KEY=change-me-in-production  # HMAC session signing key
DEBUG=false
LOG_LEVEL=INFO
ARTIFACTS_DIR=~/.breakthevibe/projects
ENVIRONMENT=development  # development | staging | production

# -----------------------------------------------------------------------------
# Multi-tenancy & Auth
# -----------------------------------------------------------------------------
AUTH_MODE=single  # single | clerk

# Basic auth (used when AUTH_MODE=single; if unset, MVP mode accepts any credentials)
ADMIN_USERNAME=
ADMIN_PASSWORD=

# Clerk (required when AUTH_MODE=clerk)
CLERK_PUBLISHABLE_KEY=
CLERK_SECRET_KEY=
CLERK_WEBHOOK_SECRET=
CLERK_JWKS_URL=
CLERK_ISSUER=
CLERK_FRONTEND_API=

# -----------------------------------------------------------------------------
# CORS
# -----------------------------------------------------------------------------
ALLOWED_ORIGINS=["http://localhost:8000","http://127.0.0.1:8000"]

# -----------------------------------------------------------------------------
# SSRF Protection
# -----------------------------------------------------------------------------
ALLOW_PRIVATE_URLS=true  # Set false in production

# -----------------------------------------------------------------------------
# Object Storage (S3 / Cloudflare R2)
# -----------------------------------------------------------------------------
USE_S3=false
S3_BUCKET=
S3_ENDPOINT_URL=
S3_ACCESS_KEY_ID=
S3_SECRET_ACCESS_KEY=
S3_REGION=auto

# -----------------------------------------------------------------------------
# LLM Providers (at least one required for test generation)
# -----------------------------------------------------------------------------
ANTHROPIC_API_KEY=
OPENAI_API_KEY=
GOOGLE_API_KEY=
OLLAMA_BASE_URL=http://localhost:11434
